<h1>Tickets#show</h1>

<%= @polygon_data %>




<div id="map" style="height: 400px;"></div>


<script>
  var polygonData = <%= raw @polygon_data.to_json %>;

  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
      center: { lat: -81.13390268058475, lng: 32.07206917625161 },
      zoom: 12,
    });

    var polygonCoords = polygonData.map(function (point) {
      return { lat: parseFloat(point.lat), lng: parseFloat(point.lng) };
    });

    var polygon = new google.maps.Polygon({
      paths: polygonCoords,
      strokeColor: '#FF0000',
      strokeOpacity: 0.8,
      strokeWeight: 2,
      fillColor: '#FF0000',
      fillOpacity: 0.35,
    });

    polygon.setMap(map);
  }
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0ixPON6uflGv3s7n9r5GR-QS4QUoCC5Y&callback=initMap"></script>
